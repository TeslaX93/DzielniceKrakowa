{% extends 'base.html.twig' %}

{% block title %}Dzielnice{% endblock %}

{% block body %}
    <h1>Lista dzielnic</h1>
{{ include('district/filter.html.twig') }}
    <table class="table">
        <thead>
            <tr>
                <th>L.p.</th>
                <th><a href="{{ path('app_district_homepage_sorted', { 'orderBy': 'name'}) }}">Nazwa</a></th>
                <th><a href="{{ path('app_district_homepage_sorted', { 'orderBy': 'population'}) }}">Ludność</a></th>
                <th><a href="{{ path('app_district_homepage_sorted', { 'orderBy': 'city'}) }}">Miasto</a></th>
                <th><a href="{{ path('app_district_homepage_sorted', { 'orderBy': 'area'}) }}">Powierzchnia</a></th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for district in districts %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ district.name }}</td>
                <td>{{ district.population }}</td>
                <td>{{ district.city }}</td>
                <td>{{ district.area }} ha</td>
                <td>
                    <a href="{{ path('app_district_show', {'id': district.id}) }}">Pokaż/usuń</a>
                    <a href="{{ path('app_district_edit', {'id': district.id}) }}">Edytuj</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Brak wyników</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_district_new') }}">Utwórz nową dzielnicę</a>
{% endblock %}
