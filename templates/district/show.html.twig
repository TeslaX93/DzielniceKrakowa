{% extends 'base.html.twig' %}

{% block title %}Dzielnica{% endblock %}

{% block body %}
    <h1>Szczegóły dzielnicy</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nazwa</th>
                <td>{{ district.name }}</td>
            </tr>
            <tr>
                <th>Ludność</th>
                <td>{{ district.population }}</td>
            </tr>
            <tr>
                <th>Miasto</th>
                <td>{{ district.city }}</td>
            </tr>
            <tr>
                <th>Powierzchnia</th>
                <td>{{ district.area }} ha</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_district_homepage') }}">Powrót do listy</a>

    <a href="{{ path('app_district_edit', {'id': district.id}) }}">Edycja</a>

    {{ include('district/_delete_form.html.twig') }}
{% endblock %}
